<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.text.Font?>
<?import org.controlsfx.control.ToggleSwitch?>

<AnchorPane prefHeight="300.0" prefWidth="500.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="edu.eskisehir.MainController">
   <children>
      <Pane fx:id="pane" prefHeight="300.0" prefWidth="500.0" style="-fx-background-color: lightgray;" stylesheets="@../css/Main.css">
         <children>
            <Button fx:id="btnSet" layoutX="326.0" layoutY="177.0" mnemonicParsing="false" onAction="#setTimer" styleClass="setbtn" stylesheets="@../css/Main.css" text="Ayarla" />
            <Label fx:id="lblSubTitle" layoutX="20.0" layoutY="137.0" text="Kaç dakika sonra bilgisayar kapansın?">
               <font>
                  <Font size="14.0" />
               </font>
            </Label>
            <Label fx:id="header" alignment="CENTER" layoutY="67.0" prefHeight="27.0" prefWidth="500.0" text="Otomatik Bilgisayar Kapatıcı">
               <font>
                  <Font name="System Bold" size="18.0" />
               </font>
            </Label>
            <TextField fx:id="txtTime" layoutX="276.0" layoutY="138.0" />
            <Button fx:id="btnCancel" layoutX="324.0" layoutY="214.0" mnemonicParsing="false" onAction="#cancelTimer" styleClass="cancelbtn" text="İptal et" />
            <Label fx:id="lbl" layoutX="20.0" layoutY="218.0" />
            <ComboBox fx:id="comboBox" layoutX="420.0" layoutY="12.0" onAction="#selectLanguage" prefHeight="25.0" prefWidth="66.0" />
            <Label fx:id="lblLang" layoutX="287.0" layoutY="16.0" prefHeight="17.0" prefWidth="127.0" text="Select your Language :" />
            <Button fx:id="btnExit" layoutX="440.0" layoutY="261.0" mnemonicParsing="false" onAction="#exit" styleClass="exitBtn" text="Button" />
            <ToggleSwitch fx:id="switchMode" layoutY="7.0" onMouseClicked="#changeMode" />
         </children></Pane>
   </children>
</AnchorPane>
